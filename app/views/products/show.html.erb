<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
     
    </tr>
  </thead>
  <tbody>
    <tr>
    
      <td><%= @products.name %></td>
      <td><%= @products.price %></td>
    </tr>
 </tbody>
</table>


<button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_product_path(@products), method:'get' %>
</button>
<button type="button" class="btn btn-warning"><%= link_to 'Destroy', product_path(@products.id), data:{
    turbo_method: :"delete",
    turbo_confrim: :"Confirm?"}
%>
</button>
</br>
</br>

<h2>Add Feedback:</h2>
<%= form_with model: [ @products, @products.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter ,class:"form-control"%>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, class:"form-control"%>
  </p>
  <p>

  
    <%= form.submit class:"btn btn-primary"%>
  </p>
<% end %>

</br>

<h2>All Comments</h2>
  <table class="table">
  <thead>
    <tr>
   
      <th scope="col">Commenter:</th>
      <th scope="col">Comment:</th>

    </tr>
  </thead>
<%@products.comments.each do |comment|%>
  <tbody>
  <tr>
      <td><%= comment.commenter %></td>
      <td><%= comment.body %></td>
    </tr>
      </tbody>
</table>
  <% end %>

